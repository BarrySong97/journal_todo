{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JournalTodo",
  "version": "0.1.0",
  "identifier": "com.journal-todo.app",
  "build": {
    "beforeDevCommand": "pnpm --filter @journal-todo/web dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm --filter @journal-todo/web build",
    "frontendDist": "../../web/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Journal Todo",
        "width": 402,
        "height": 800,
        "minWidth": 362,
        "minHeight": 582,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}